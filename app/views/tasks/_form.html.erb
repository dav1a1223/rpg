<%= simple_form_for(@task) do |f| %>
  <%= f.error_notification %>

  <div class="form-inputs">
    <%= f.input :name %>
    <%= f.input :people_num %>
    <%= f.input :location %>
    <%= f.input :password %>
    <%= f.input :description %>
    <%= f.input :finish_way %>
    <%= f.association :user %>
  </div>

  <div class="form-actions">
    <%= f.button :submit %>
  </div>
<% end %>
