<h2>任務地點：<%= @task.location %></h2>
<%= image_tag @task.landmark %>
<h2>任務提示：</h2>
<%= image_tag @task.pwd_image %>
<%= @task.hint %>

<%= simple_form_for(@task, url: task_path(@task)) do |f| %>
  <%= f.error_notification %>

  <div class="form-inputs">
    <%= f.input :check_pwd %>
  </div>

  <div class="form-actions">
    <%= f.button :submit, "確認" %>
  </div>
<% end %>
<%= link_to "回首頁", :root %>
